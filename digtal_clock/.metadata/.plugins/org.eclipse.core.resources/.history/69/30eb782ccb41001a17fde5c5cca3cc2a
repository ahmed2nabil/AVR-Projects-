#include<avr/io.h>
#include<util/delay.h>
unsigned char counter=0;
int main(){
	DDRC = 0xFF;
PORTC =0xF0;
DDRA=0xFF;
PORTA= 0xFF;
while(1){

	PORTC = (PORTC & 0xF0) | (counter & 0x0F);
	if (counter==9){
		counter=0;
	}
	else{
		counter++;
	}
	_delay_ms(500);
}
}
